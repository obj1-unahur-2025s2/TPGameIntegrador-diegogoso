import wollok.game.*
import clases.*
import hechizos.*
import direcciones.*
import juego.*
import enemigos.*

program redWaterMystery {
  juego.iniciarMenu()
  
  var personaje = juego.jugador()

  keyboard.w().onPressDo({
    personaje.moverseHacia(norte)
  })

  keyboard.s().onPressDo({
    personaje.moverseHacia(sur)
  })

  keyboard.a().onPressDo({
      personaje.moverseHacia(oeste)
  })

  keyboard.d().onPressDo({
      personaje.moverseHacia(este)
  })

  game.onCollideDo(fuego, {algo => algo.recibirAtaque(fuego)})
  
  game.start()
}


